{
  "name": "pgats-2025-02-base",
  "version": "1.0.0",
  "description": "Projeto base PGATS 2025-02 com REST + GraphQL + Tests",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "rest:serve": "node rest/server.js",
    "graphql:serve": "node graphql/server.js",
    "dev:servers": "concurrently -k -s first -n REST,GRAPHQL \"npm run rest:serve\" \"npm run graphql:serve\"",
    "test:controller": "nyc mocha \"test/controller/**/*.test.js\" --timeout 15000",
    "test:external": "nyc mocha \"test/external/**/*.test.js\" --timeout 20000 --exit",
    "wait-and-test": "wait-on -v -t 120000 http-get://localhost:4000/graphql && npm run test:external",
    "ci:external": "start-server-and-test dev:servers http://localhost:3000 wait-and-test",
    "test": "npm run test:controller && npm run ci:external"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juliodelimas/pgats-2025-02-base.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/juliodelimas/pgats-2025-02-base/issues"
  },
  "homepage": "https://github.com/juliodelimas/pgats-2025-02-base#readme",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "concurrently": "^9.1.0",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "start-server-and-test": "^2.1.0",
    "supertest": "^7.1.4",
    "wait-on": "^8.0.4"
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "include": [
      "rest/**/*.js",
      "graphql/**/*.js",
      "src/**/*.js"
    ],
    "exclude": [
      "**/server.js",
      "test/**"
    ],
    "check-coverage": true,
    "branches": 50,
    "functions": 60,
    "lines": 60,
    "statements": 60
  }
}
